# Samtools Interactive Installation Submission 
# Referencing http://chtc.cs.wisc.edu/inter-submit.shtml

# logfile
log = interactive.log

# STD out
output = process.out
error = process.err

+IsBuildJob = true
requirements = (OpSysMajorVer =?= 7) && ( IsBuildSlot == true )

# Transfer for interactive installation 
transfer_input_files = samtools-1.9.tar.bz2

# compute resources 
request_cpus = 1
request_memory = 1GB
request_disk = 1GB

